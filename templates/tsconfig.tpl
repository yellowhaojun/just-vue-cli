{
  "compilerOptions": {
    "target": "ESNEXT",                   
    "module": "commonjs",                    
    "strict": true,                     
    "noImplicitAny": false,              
    "esModuleInterop": true,                
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}